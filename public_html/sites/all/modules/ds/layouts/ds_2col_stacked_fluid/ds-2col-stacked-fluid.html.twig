{% if (left and not right) or (right and not left) %}
  {% set layout_classes = attributes.class ~ ' group-one-column' %}
{% else %}
  {% set layout_classes = attributes.class %}
{% endif %}

<{{ layout_wrapper }} class="ds-2col-stacked-fluid {{ layout_classes }} clearfix" {{ attributes }}>

  {% if title_suffix.contextual_links is not null %}
    {{ title_suffix.contextual_links }}
  {% endif %}

  <{{ header_wrapper }} class="group-header{{ header_classes }}">
    {% if header is not null %}
      {{ header }}
    {% endif %}
  </{{ header_wrapper }}>

  <{{ left_wrapper }} class="group-left{{ left_classes }}">
    {% if left is not null %}
      {{ left }}
    {% endif %}
  </{{ left_wrapper }}>

  <{{ right_wrapper }} class="group-right{{ right_classes }}">
    {% if right is not null %}
      {{ right }}
    {% endif %}
  </{{ right_wrapper }}>

  <{{ footer_wrapper }} class="group-footer{{ footer_classes }}">
    {% if footer is not null %}
      {{ footer }}
    {% endif %}
  </{{ footer_wrapper }}>

</{{ layout_wrapper }}>

{% if drupal_render_children is not null %}
  {{ drupal_render_children }}
{% endif %}

